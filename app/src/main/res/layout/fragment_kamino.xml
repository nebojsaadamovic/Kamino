<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    tools:context=".activitykamino.FragmentKaminoPlanet"
    android:background="@drawable/star">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/rotation_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/orbital_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/diameter_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/climate_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/gravity_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/terrain_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/surface_water_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/population_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<!--                <com.mikhaellopez.circularimageview.CircularImageView-->
<!--                    android:id="@+id/imageViewPlanet_id"-->
<!--                    android:layout_width="150dp"-->
<!--                    android:layout_height="150dp"-->
<!--                    android:src="@drawable/kaminostar"-->
<!--                    android:layout_marginTop="60dp"-->
<!--                    android:layout_marginBottom="60dp"-->
<!--                    app:civ_border_color="#3f51b5"-->
<!--                    app:civ_border_width="4dp"-->
<!--                    app:civ_shadow="true"-->
<!--                    app:civ_shadow_radius="10dp"-->
<!--                    app:civ_shadow_color="#3f51b5"/>-->


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30dp"/>
                <Button
                    android:id="@+id/btnlike_id"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/likes"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/likes_id"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"

                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
