<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activitykamino.FragmentKamino"
    android:background="@drawable/universum_frag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/rotation_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/orbital_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/diameter_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/climate_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/gravity_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/terrain_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/surface_water_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

                <TextView
                    android:id="@+id/population_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageViewPlanet_id"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textSize="30dp"/>
                <Button
                    android:id="@+id/btnlike_id"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/likes"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/likes_id"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:layout_marginLeft="35dp"
                    android:paddingBottom="8dp"
                    android:textColor="#ffffff" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>
